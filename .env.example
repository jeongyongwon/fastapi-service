# 애플리케이션 설정
APP_NAME=fastapi-service
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=change-this-to-random-secret-key-in-production

# 서버 설정
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# 데이터베이스 설정
DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/app_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=app_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis 설정
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery 설정
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# 캐시 설정
CACHE_TTL=60
CACHE_MAX_SIZE=1000

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_PATH=/var/log/fastapi-service

# API 설정
API_RATE_LIMIT=100
API_TIMEOUT=30
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# JWT 설정
JWT_SECRET_KEY=change-this-to-random-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 외부 서비스
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# 모니터링
SENTRY_DSN=
PROMETHEUS_ENABLED=true
